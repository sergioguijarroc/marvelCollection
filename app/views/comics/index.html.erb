<!-- index.html.erb -->
<div class="card shadow-sm">
  <div class="card-body p-0">
    <div class="container-fluid py-4">
      <!-- Header Section -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Comics List</h1>
        <%= link_to new_comic_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-circle"></i> Create New Comic
        <% end %>
      </div>

      <!-- Stats Cards -->
      <div class="row g-4 mb-4">
        <div class="col-md-4">
          <div class="card bg-light">
            <div class="card-body">
              <h5 class="card-title">Total Comics</h5>
              <p class="card-text h2"><%= @comics.size %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="container-fluid py-4">
            <div class="table-responsive">
              <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                  <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Release Date</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-center">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @comics.each do |comic| %>
                    <tr>
                      <td><%= comic.title %></td>
                      <td><%= comic.release_date %></td>
                      <td><%= comic.description %></td>
                      <td class="text-center">
                        <%= link_to comic, class: "btn btn-outline-primary btn-sm" do %>
                          <i class="bi bi-eye"></i> Show
                        <% end %>
                        <%= link_to edit_comic_path(comic), class: "btn btn-outline-secondary btn-sm" do %>
                          <i class="bi bi-pencil"></i> Edit
                        <% end %>
                        <%= link_to comic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" do %>
                          <i class="bi bi-trash"></i> Destroy
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>