<!-- _form.html.erb -->
<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with(model: @comic, local: true, class: "needs-validation") do |form| %>
      <% if @comic.errors.any? %>
        <div class="alert alert-danger">
          <h5 class="alert-heading">
            <i class="bi bi-exclamation-triangle"></i> 
            <%= pluralize(@comic.errors.count, "error") %> prohibited this comic from being saved:
          </h5>
          <ul class="mb-0">
            <% @comic.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <div class="form-floating">
            <%= form.text_field :title, class: "form-control", placeholder: "Comic title" %>
            <%= form.label :title, class: "required" do %>
              <i class="bi bi-book"></i> Title
            <% end %>
          </div>
        </div>
      </div>

      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :release_date, class: "form-label required" do %>
              <i class="bi bi-calendar"></i> Release Date
            <% end %>
            <%= form.date_select :release_date, start_year: 1900, end_year: Date.today.year, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-12">
          <div class="form-group">
            <%= form.label :description, class: "form-label required" do %>
              <i class="bi bi-file-text"></i> Description
            <% end %>
            <%= form.text_area :description,
                class: "form-control",
                placeholder: "Write your comic description here..." %>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-end gap-2">
        <%= link_to comics_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-x-circle"></i> Cancel
        <% end %>
        
        <%= form.submit class: "btn btn-primary" do %>
          <i class="bi bi-check-circle"></i> Save Comic
        <% end %>
      </div>
    <% end %>
  </div>
</div>