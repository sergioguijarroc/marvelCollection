<!-- _character.html.erb -->
<tr>
  <td class="text-center"><%= character.id %></td>
  <td><%= character.name %></td>
  <td><%= character.user.email %></td>
  <td>
    <div class="d-flex justify-content-center gap-2">
      <%= link_to character, class: "btn btn-sm btn-outline-primary" do %>
        <i class="bi bi-eye-fill"></i> View
      <% end %>
      <%if current_user.permissions.include? 'update'%>
        <%= link_to edit_character_path(character), class: "btn btn-sm btn-outline-warning" do %>
          <i class="bi bi-pencil-fill"></i> Edit
        <% end %>
      <%end%>
      <% if current_user.permissions.include? 'delete' %>
        <%= link_to character, 
            method: :delete, 
            class: "btn btn-sm btn-outline-danger",
            data: { confirm: 'Are you sure?' } do %>
          <i class="bi bi-trash-fill"></i> Delete
        <% end %>
      <% end %>
    </div>
  </td>
</tr>