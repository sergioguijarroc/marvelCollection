<div class="">
    <%= form_with(model: @character, local: true) do |form| %>
    <div class="row">
        <div class="col-2">
            <%= form.label :name%>
            <%= form.text_field :name, class: "form-control"%>
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            <%=form.label :description %>
            <%=form.rich_text_area :description, class: "form-control" %>
        </div>
        <div>
            <%= form.submit class: "btn btn-primary mt-3"%>
        </div>
    </div>
<% end %>
</div>

