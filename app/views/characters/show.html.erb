<!-- app/views/characters/show.html.erb -->
<div class="container-fluid py-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="card-title mb-0"><%= @character.name %></h2>
        <%= link_to characters_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i> Back
        <% end %>
      </div>

      <% if @character.image_url.present? %>
        <div class="row mb-4">
          <div class="col-12 text-center">
            <img src="<%= @character.image_url %>" alt="<%= @character.name %>" class="img-fluid rounded w-25" />
          </div>
        </div>
      <% end %>

      <div class="card mb-4">
        <div class="card-body bg-light">
          <h5 class="card-subtitle mb-2 text-muted">Description</h5>
          <p class="card-text"><%= @character.description %></p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-subtitle mb-2 text-muted">Creator Information</h5>
          <p class="card-text">
            <i class="bi bi-envelope"></i>
            Created by: <strong><%= @character.user.email %></strong>
          </p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-subtitle mb-2 text-muted">Comics</h5>
            <ul class="list-group">
              <% if @comics.any? %>
                <% @comics.each do |comic| %>
                  <li class="list-group-item"><%= link_to comic.title, comic %></li>
                <% end %>
              <% else %>
                <p><strong>No comics found</strong></p>
              <% end %>
            </ul>
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <%= link_to edit_character_path(@character), class: "btn btn-warning me-2" do %>
          <i class="bi bi-pencil-fill"></i> Edit
        <% end %>
        
        <%= link_to @character, 
            method: :delete, 
            class: "btn btn-danger",
            data: { confirm: 'Are you sure you want to delete this character?' } do %>
          <i class="bi bi-trash-fill"></i> Delete
        <% end %>
      </div>
    </div>
  </div>
</div>