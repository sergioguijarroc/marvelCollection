<!-- show.html.erb -->
<div class="container-fluid py-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="card-title mb-0"><%= @character.name %></h2>
        <%= link_to characters_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i> Back
        <% end %>
      </div>

      <div class="card mb-4">
        <div class="card-body bg-light">
          <h5 class="card-subtitle mb-2 text-muted">Description</h5>
          <p class="card-text"><%= @character.description %></p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-subtitle mb-2 text-muted">Creator Information</h5>
          <p class="card-text">
            <i class="bi bi-envelope"></i>
            Created by: <strong><%= @character.user.email %></strong>
          </p>
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <%= link_to edit_character_path(@character), class: "btn btn-warning me-2" do %>
          <i class="bi bi-pencil-fill"></i> Edit
        <% end %>
        
        <%= link_to @character, 
            method: :delete, 
            class: "btn btn-danger",
            data: { confirm: 'Are you sure you want to delete this character?' } do %>
          <i class="bi bi-trash-fill"></i> Delete
        <% end %>
      </div>
    </div>
  </div>
</div>