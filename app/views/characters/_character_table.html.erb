<!-- _character_table.html.erb -->
<div class="card shadow-sm">
  <div class="card-body p-0">
    <div class="container-fluid py-4">
      <!-- Header Section -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Characters List</h1>
        <% if @index %>
          <%= link_to create_character_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-circle"></i> Create New Character
          <% end %>
        <% else %>
          <%= link_to create_character_path(user_id: current_user.id), class: "btn btn-primary" do %>
            <i class="bi bi-plus-circle"></i> Create New Character
          <% end %>
        <% end %>
      </div>

      <!-- Search Form -->
      <div class="mb-4">
        <%= form_with(url: characters_path, method: :get, local: true) do |form| %>
          <div class="input-group mb-3">
            <%= form.text_field :search_name, value: params[:search_name], class: "form-control", placeholder: "Search by name" %>
            <button class="btn btn-outline-secondary" type="submit">Search</button>
          </div>
          <% if @users %>
            <div class="row g-3 mb-4">
              <div class="col-md-6">
                <div class="form-floating">
                  <%= form.collection_select :user_id, @users, :id, :email, prompt: "Select a user", class: "form-control" %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Stats Cards -->
      <div class="row g-4 mb-4">
        <div class="col-md-4">
          <div class="card bg-light">
            <div class="card-body">
              <h5 class="card-title">Total Characters</h5>
              <p class="card-text h2"><%= @characters.size %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="container-fluid py-4">
            <div class="table-responsive">
              <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                  <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Name</th>
                    <th scope="col" class="text-center">Actions</th>
                  </tr>
                </thead>
                <%= render @characters %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>